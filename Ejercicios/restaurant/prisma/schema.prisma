generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id Int @id @default(autoincrement())

  name String
  mail String
  reservation Reservation[]

  @@map("customers")
}

model Table {
  id Int @id @default(autoincrement())

  ability Int
  description String
  reservation Reservation[]

  @@map("tables")
}

model Reservation {
  id Int @id @default(autoincrement())
  
  id_Customer Int @map("id_customer")
  id_Table Int @map("id_table")
  date DateTime

  customer Customer @relation(fields: [id_Customer], references: [id])
  table Table @relation(fields: [id_Table], references: [id])

  @@map("reservations")
}